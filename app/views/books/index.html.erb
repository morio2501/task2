
<header>
		<h1>Bookes</h1>
		<table>
				<tr>
					<th>title</th>
					<th>body</th>
				</tr>

				<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to 'show', book_path(book.id) %>ã€€</td>
					<td><%= link_to 'edit', edit_book_path(book.id) %></td>
					<td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: 'Are you sure?'} %></td>
				</tr>
				<% end %>
		</table>
</header>
<body>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<h4>title</h4>
	<%= f.text_field :title %>
	<h4>body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
	<% end %>
</body>
